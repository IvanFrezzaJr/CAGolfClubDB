@page "/bookings"
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using CAGolfClubDB.Models
@using CAGolfClubDB.Data
@implements IAsyncDisposable
@inject IDbContextFactory<CAGolfClubDB.Data.CAGolfClubDBContext> DbFactory

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="bookings/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.Booking">
    <PropertyColumn Property="booking => booking.PlayerId" />
    <PropertyColumn Property="booking => booking.Date" />
    <PropertyColumn Property="booking => booking.CreatedAt" />
    <PropertyColumn Property="booking => booking.UpdatedAt" />

    <TemplateColumn Context="booking">
        <a href="@($"bookings/edit?id={booking.Id}")">Edit</a> |
        <a href="@($"bookings/details?id={booking.Id}")">Details</a> |
        <a href="@($"bookings/delete?id={booking.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private CAGolfClubDBContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
